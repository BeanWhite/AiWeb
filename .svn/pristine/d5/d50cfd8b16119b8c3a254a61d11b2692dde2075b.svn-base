

.change-page {
	cursor: default;
	width: 400px;
	height: 100%;
	display: flex;
	justify-content: center;
	align-items: center;
}

.back-page {
	cursor: pointer;
	margin-right: 30px;

	font-family: SourceHanSansSC;
	font-weight: 700;
	font-size: 30px;
	color: rgba(0, 0, 0, 0.6);

}

.into-page {
	cursor: pointer;

	font-family: SourceHanSansSC;
	font-weight: 700;
	font-size: 30px;
	color: rgb(195, 7, 7);

}

.page-content {
	width: 100%;
	height: 100%;
	display: inherit;
}

